    <Style x:Key="LookAtMe" TargetType="Button">
        <Style.Triggers>
            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Frame}, Path=IsMouseOver}" Value="True">
                <DataTrigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Frame.Background).(SolidColorBrush.Color)">
                                <LinearColorKeyFrame KeyTime="0:0:0.5"
                                                 Value="#eb0004"/>
                                <LinearColorKeyFrame KeyTime="0:0:1.0"
                                                 Value="#ebdf00"/>
                                <LinearColorKeyFrame KeyTime="0:0:1.5"
                                                 Value="#22cf00"/>
                                <LinearColorKeyFrame KeyTime="0:0:2.0"
                                                 Value="#00c8cf"/>
                                <LinearColorKeyFrame KeyTime="0:0:2.5"
                                                 Value="#a900cf"/>
                                <LinearColorKeyFrame KeyTime="0:0:3.0"
                                                 Value="#eb0004"/>
                                <LinearColorKeyFrame KeyTime="0:0:3.5"
                                                 Value="#ebdf00"/>
                                <LinearColorKeyFrame KeyTime="0:0:4.0"
                                                 Value="#22cf00"/>
                                <LinearColorKeyFrame KeyTime="0:0:4.5"
                                                 Value="#00c8cf"/>
                                <LinearColorKeyFrame KeyTime="0:0:5.0"
                                                 Value="#a900cf"/>
                                <LinearColorKeyFrame KeyTime="0:0:5.5"
                                                 Value="Black"/>


                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.EnterActions>
                <DataTrigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Frame.Background).(SolidColorBrush.Color)">
                                <LinearColorKeyFrame KeyTime="0:0:0.2"
                                                 Value="White"/>
                                <LinearColorKeyFrame KeyTime="0:0:0.5"
                                                 Value="Black"/>
                            </ColorAnimationUsingKeyFrames>
                        </Storyboard>
                    </BeginStoryboard>
                </DataTrigger.ExitActions>
            </DataTrigger>
        </Style.Triggers>
    </Style>

